<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jake.jtdavids_reflex" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SinglePlayerActivity"
            android:label="@string/title_activity_single_player" >
        </activity>
        <activity
            android:name=".MultiplayerActivity"
            android:label="@string/title_activity_multiplayer" >
        </activity>
        <activity
            android:name=".MultiplayerFourPlayerActivity"
            android:label="MultiplayerFourPlayerActivity" >
        </activity>
        <activity
            android:name=".MultiplayerThreePlayerActivity"
            android:label="@string/title_activity_multiplayer_three_player" >
        </activity>
        <activity
            android:name=".MultiplayerTwoPlayerActivity"
            android:label="@string/title_activity_multiplayer_two_player" >
        </activity>
    </application>

</manifest>
