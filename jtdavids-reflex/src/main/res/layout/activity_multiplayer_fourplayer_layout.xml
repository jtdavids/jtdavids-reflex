<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.jake.jtdavids_reflex.MultiplayerFourPlayerActivity">


    <TableLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/fourplayer_button1_text"
            android:id="@+id/Player1Button"
            android:layout_weight="1"
            android:onClick="player1_Buzzed"
            android:layout_margin="5dp"
            android:background="#44FF0000"
            android:textColor="#000"
            android:textSize="20sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/fourplayer_button3_text"
            android:id="@+id/Player3Button"
            android:layout_weight="1"
            android:onClick="player3_Buzzed"
            android:layout_margin="5dp"
            android:background="#440000FF"
            android:textColor="#000"
            android:textSize="20sp" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/fourplayer_button2_text"
            android:id="@+id/Player2Button"
            android:layout_weight="1"
            android:onClick="player2_Buzzed"
            android:layout_margin="5dp"
            android:background="#4400FF00"
            android:textColor="#000"
            android:textSize="20sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/fourplayer_button4_text"
            android:id="@+id/Player4Button"
            android:layout_weight="1"
            android:onClick="player4_Buzzed"
            android:layout_margin="5dp"
            android:background="#55F0F000"
            android:textColor="#000"
            android:textSize="20sp" />
    </TableRow>
    </TableLayout>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:gravity="center"
        android:text="@string/multiplayer_reset_buttontext"
        android:id="@+id/ResetRoundButton"
        android:background="@drawable/reset_button"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:onClick="ResetBuzzers"/>


</LinearLayout>
